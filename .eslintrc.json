    "extractExcerptText": "writable",

    "EventEmitter": "writable",

    "NodeType": "writable",
    "EdgeType": "writable",
    "TAG_COLORS": "writable",
    "DEFAULT_NODE_SIZES": "writable",
    "getDefaultNodeSize": "writable",
    "createNode": "writable",
    "createEdge": "writable",
    "createMatrixNode": "writable",
    "createCellNode": "writable",
    "createRowNode": "writable",
    "createColumnNode": "writable",
    "createFlashcardNode": "writable",

    "CRDTGraph": "writable",

    "Actions": "writable",
    "HeaderButtons": "writable",
    "BaseNode": "writable",
    "HumanNode": "writable",
    "AINode": "writable",
    "NoteNode": "writable",
    "SummaryNode": "writable",
    "ReferenceNode": "writable",
    "SearchNode": "writable",
    "ResearchNode": "writable",
    "HighlightNode": "writable",
    "MatrixNode": "writable",
    "CellNode": "writable",
    "RowNode": "writable",
    "ColumnNode": "writable",
    "FetchResultNode": "writable",
    "PDFNode": "writable",
    "OpinionNode": "writable",
    "SynthesisNode": "writable",
    "ReviewNode": "writable",
    "ImageNode": "writable",
    "FlashcardNode": "writable",
    "FactcheckNode": "writable",
